<% layout('./layoutadmin') -%>

<div class="jumbotron">
    <div class="container text-center">
        <h1>Edit User</h1>
    </div>
</div>
<div>
    <form class="container" action="/home/useredit" method="post">
        <div class="row">
            <input style="display: none;" name="_id" value="<%= model._id%>">
            <div class="form-group col">
                <label for="username">User Name</label>
                <input id="username" name="username" type="text" value="<%= model.username || '' %>"
                    class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="password">Password</label>
                <input id="password" name="password" type="text" value="<%= model.password || '' %>"
                    class="form-control">
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>